---
import '@/styles/starwind.css';
import '@/styles/fonts.css';
import Navigation from '@/components/Navigation.astro';
import Hero from '@/components/Hero.astro';
import About from '@/components/About.astro';
import Gallery from '@/components/Gallery.astro';
import Reviews from '@/components/Reviews.astro';
import Menu from '@/components/Menu.astro';
import Catering from '@/components/Catering.astro';
import Merch from '@/components/Merch.astro';
import FindUs from '@/components/FindUs.astro';
import FAQ from '@/components/FAQ.astro';
import Footer from '@/components/Footer.astro';
---

<html lang="sv">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="color-scheme" content="light" />
		
		<!-- Additional SEO meta tags -->
		<meta name="author" content="Sospeso Café" />
		<meta name="keywords" content="italienskt kaffe, espresso, café, gärdet, stockholm, cornetto, barista, kaffekultur, sospeso" />
		<meta name="geo.region" content="SE-AB" />
		<meta name="geo.placename" content="Stockholm" />
		<meta name="geo.position" content="59.3365;18.0994" />
		<meta name="ICBM" content="59.3365, 18.0994" />
		
		<!-- DNS prefetch removed - maps not loaded on initial page load -->
		<meta name="description" content="Autentiskt italienskt kaffe på Gärdet, Stockholm. Besök Sospeso för espresso, cornetti och äkta italiensk kaffekultur." />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://sospesosthlm.com" />
		
		<!-- Open Graph / Social -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://sospesosthlm.com" />
		<meta property="og:title" content="Sospeso - Italienskt Kaffe på Gärdet" />
		<meta property="og:description" content="Autentiskt italienskt kaffe på Gärdet, Stockholm. Espresso, cornetti och äkta kaffekultur." />
		<meta property="og:image" content="https://sospesosthlm.com/hero-background.webp" />
		<meta property="og:locale" content="sv_SE" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Sospeso - Italienskt Kaffe på Gärdet" />
		<meta name="twitter:description" content="Autentiskt italienskt kaffe på Gärdet, Stockholm." />
		<meta name="twitter:image" content="https://sospesosthlm.com/hero-background.webp" />
		
		<!-- Structured Data for LocalBusiness -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "LocalBusiness",
			"name": "Sospeso",
			"description": "Autentiskt italienskt kaffe på Gärdet, Stockholm. Espresso, cornetti och äkta kaffekultur.",
			"url": "https://sospesosthlm.com",
			"telephone": "+46-8-12345678",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Gärdet",
				"addressLocality": "Stockholm",
				"addressRegion": "Stockholm",
				"postalCode": "11521",
				"addressCountry": "SE"
			},
			"geo": {
				"@type": "GeoCoordinates",
				"latitude": "59.3365",
				"longitude": "18.0994"
			},
			"openingHours": [
				"Mo Closed",
				"Tu-Fr 08:00-16:00",
				"Sa-Su 09:00-15:00"
			],
			"sameAs": [
				"https://www.facebook.com/sospesosthlm",
				"https://www.instagram.com/sospesosthlm"
			],
			"menu": "https://sospesosthlm.com/meny",
			"image": "https://sospesosthlm.com/hero-background.webp",
			"priceRange": "$$"
		}
		</script>
		
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Preload critical LCP font (BowlbyOneSC for hero heading) -->
		<link rel="preload" href="/fonts/BowlbyOneSC-Regular.woff2" as="font" type="font/woff2" crossorigin fetchpriority="high" />
		
		<!-- Preload Inter variable font for body text -->
		<link rel="preload" href="/fonts/Inter-Variable.woff2" as="font" type="font/woff2" crossorigin fetchpriority="high" />
		
		<!-- Hero image preload handled by Astro Image component with priority prop -->
				<title>Sospeso - Italienskt Kaffe på Gärdet</title>
	</head>

	<body class="min-h-screen flex flex-col scroll-smooth">
		<Navigation />
		<main>
			<Hero />
			<About />
			<Gallery />
			<Reviews />
			<Menu />
			<Catering />
			<Merch />
			<FAQ />
			<FindUs />
		</main>
		<Footer />
	</body>
</html>
