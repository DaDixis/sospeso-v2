---
// Hero component for the landing page
// Contains both mobile and desktop responsive layouts
import { Image } from 'astro:assets';
import { Button } from '@/components/starwind/button';
import heroImage from '@/assets/hero-background.webp';
---

<section class="min-h-screen p-4 sm:p-6 lg:p-8">
	<!-- Mobile Layout -->
	<div class="sm:hidden min-h-[calc(100vh-2rem)] flex flex-col justify-center gap-6">
		<!-- Content above image -->
		<div class="px-2">
			<h1 class="text-4xl tracking-tight text-foreground mb-3 font-display">
				Autentiskt Italienskt Kaffe
			</h1>
			<p class="text-base text-muted-foreground mb-6 font-body">
				Tis–fre: 08–16 · Lör–sön: 09–15 · Måndag: Stängt
			</p>
			<div class="flex flex-col gap-3">
				<Button href="#meny" variant="default" class="w-full hover:scale-105 hover:shadow-lg transition-all duration-200">Se Meny</Button>
				<Button href="#hitta-oss" variant="outline" class="w-full hover:scale-105 hover:shadow-md transition-all duration-200">Hitta Oss</Button>
			</div>
		</div>
		
		<!-- Image -->
		<div class="relative w-full aspect-[4/3] rounded-2xl overflow-hidden">
			<img 
				src={heroImage.src}
				alt="Sospeso café interiör" 
				width={heroImage.width}
				height={heroImage.height}
				loading="eager"
				decoding="sync"
				fetchpriority="high"
				class="absolute inset-0 w-full h-full object-cover"
			/>
		</div>
	</div>

	<!-- Desktop Layout -->
	<div class="hidden sm:block relative w-full h-[calc(100vh-3rem)] lg:h-[calc(100vh-4rem)] rounded-2xl lg:rounded-3xl overflow-hidden">
		<img 
			src={heroImage.src}
			alt="Sospeso café interiör" 
			width={heroImage.width}
			height={heroImage.height}
			loading="eager"
			decoding="sync"
			fetchpriority="high"
			class="absolute inset-0 w-full h-full object-cover"
		/>
		<!-- Dark overlay for text readability -->
		<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
		
		<!-- Content positioned at bottom left -->
		<div class="absolute inset-0 flex items-end p-10 lg:p-12">
			<div class="max-w-2xl">
				<h2 class="text-5xl lg:text-6xl xl:text-7xl tracking-tight text-white mb-6 font-display">
					Autentiskt<br class="lg:hidden" /> Italienskt Kaffe
				</h2>
				<!-- Opening times: above buttons on tablet, inline on desktop -->
				<p class="lg:hidden text-lg text-white/80 mb-4 font-body">
					Tis–fre: 08–16 · Lör–sön: 09–15 · Måndag: Stängt
				</p>
				<div class="flex flex-wrap items-stretch gap-4">
					<Button href="#meny" variant="default" size="lg" class="w-full sm:w-auto bg-white text-neutral-900 hover:bg-white/90 hover:scale-105 hover:shadow-lg transition-all duration-200">Se Meny</Button>
					<Button href="#hitta-oss" variant="outline" size="lg" class="w-full sm:w-auto border-white/40 text-white bg-transparent hover:bg-white/10 hover:scale-105 hover:shadow-md transition-all duration-200 hover:text-white">Hitta Oss</Button>
					<div class="hidden lg:flex flex-col justify-center text-lg text-white/80 font-body">
						<span>Tis–fre: 08–16 · Lör–sön: 09–15</span>
						<span>Måndag: Stängt</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
