---
// SectionHeader component - Consistent section headings
// Props:
// - title: The heading text
// - centered: Whether to center the heading (default: false)
// - spacing: Margin bottom spacing (default: 'mb-6 sm:mb-8')
interface Props {
	title: string;
	centered?: boolean;
	spacing?: string;
}

const { title, centered = false, spacing = 'mb-6 sm:mb-8' } = Astro.props;
---

<h2 class={`text-3xl sm:text-4xl tracking-tight text-foreground ${spacing} font-display ${centered ? 'text-center' : ''}`}>
	{title}
</h2>
