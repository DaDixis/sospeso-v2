---
// Reviews component - Social proof section
// Customer testimonials with authentic feedback
import { Card, CardContent } from '@/components/starwind/card';
import SectionWrapper from '@/components/shared/SectionWrapper.astro';
import SectionHeader from '@/components/shared/SectionHeader.astro';
import StarRating from '@/components/shared/StarRating.astro';
---

<SectionWrapper id="recensioner">
		<SectionHeader title="Vad Våra Gäster Säger" centered={true} spacing="mb-10 sm:mb-12" />
		
		<!-- Reviews Grid -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
			<!-- Review 1 -->
			<div class="bg-card rounded-xl p-6 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
				<div class="flex items-center gap-1 mb-3">
					<StarRating />
				</div>
				<p class="text-muted-foreground mb-4 font-body">
					"Äntligen en riktig espresso-bar på Gärdet! Så gott kaffe, goda bakverk och mackor. Michel har skapat ett ställe som är värt en omväg."
				</p>
				<div>
					<p class="font-medium text-foreground font-body">Lotta W</p>
					<p class="text-sm text-muted-foreground font-body">Tripadvisor</p>
				</div>
			</div>
			
			<!-- Review 2 -->
			<div class="bg-card rounded-xl p-6 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
				<div class="flex items-center gap-1 mb-3">
					<StarRating />
				</div>
				<p class="text-muted-foreground mb-4 font-body">
					"Äntligen en högklassig kaffebar på Gärdet! Riktigt bra kaffe, italienska bakverk, frukost och vänlig atmosfär. Hit går jag definitivt igen!"
				</p>
				<div>
					<p class="font-medium text-foreground font-body">Elin M</p>
					<p class="text-sm text-muted-foreground font-body">Tripadvisor</p>
				</div>
			</div>
			
			<!-- Review 3 -->
			<div class="bg-card rounded-xl p-6 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
				<div class="flex items-center gap-1 mb-3">
					<StarRating />
				</div>
				<p class="text-muted-foreground mb-4 font-body">
					"En halvtrappa ner ligger denna lilla espressobar med gott kaffe och sedvanliga italienska bakverk. Trevligt bemötande och fräsch miljö."
				</p>
				<div>
					<p class="font-medium text-foreground font-body">Phayao13</p>
					<p class="text-sm text-muted-foreground font-body">Tripadvisor</p>
				</div>
			</div>
		</div>
		
		<!-- Call to Action -->
		<div class="text-center mt-8 sm:mt-10">
			<a 
				href="https://www.tripadvisor.se/Restaurant_Review-g189852-d26845350-Reviews-Sospeso_Stockholm-Stockholm.html" 
				target="_blank" 
				rel="noopener noreferrer"
				class="text-muted-foreground hover:text-foreground font-body underline underline-offset-4 decoration-2 hover:decoration-foreground transition-all duration-200"
			>
				Läs fler recensioner på Tripadvisor
			</a>
		</div>
	</SectionWrapper>
</section>
