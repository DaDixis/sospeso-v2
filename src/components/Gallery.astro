---
// Gallery component - Image collage
// Clean grid layout with section header
import { Image } from 'astro:assets';

// Import gallery images
import gallery1 from '@/assets/gallery/465625346_18074300683608281_1585978899008811256_n.webp';
import gallery2 from '@/assets/gallery/469277128_18076608766608281_6498017909358642527_n.webp';
import gallery3 from '@/assets/gallery/418269537_18044448928608281_6422876959594812420_n.webp';
import gallery4 from '@/assets/gallery/469028875_18076608787608281_3997326141294755413_n.webp';
import gallery5 from '@/assets/gallery/472291976_18079600228608281_4348776798519477251_n.webp';
import gallery6 from '@/assets/gallery/469002718_18076607638608281_3925874698311000688_n.webp';
---

<section id="galleri" class="p-4 sm:p-6 lg:p-8">
	<div class="max-w-6xl mx-auto">
		<!-- Section Header -->
		<h2 class="text-3xl sm:text-4xl tracking-tight text-foreground mb-6 sm:mb-8 text-center font-display">
			Från Vårt Café
		</h2>
		
		<!-- Gallery Grid - 2 rows, balanced layout -->
		<div class="gallery-grid">
			<!-- Row 1: Wide + Square + Square -->
			<div class="gallery-item wide">
				<Image src={gallery1} alt="Espresso från Sospeso" width={560} height={280} sizes="(min-width: 768px) 50vw, 100vw" widths={[217, 434, 560]} />
			</div>
			<div class="gallery-item">
				<Image src={gallery2} alt="Färska croissanter" width={280} height={280} sizes="(min-width: 768px) 25vw, 50vw" widths={[213, 280]} />
			</div>
			<div class="gallery-item">
				<Image src={gallery3} alt="Kaffe och bakelse" width={280} height={280} sizes="(min-width: 768px) 25vw, 50vw" widths={[213, 280]} />
			</div>
			
			<!-- Row 2: Square + Square + Wide -->
			<div class="gallery-item">
				<Image src={gallery4} alt="Espresso serverad" width={280} height={280} sizes="(min-width: 768px) 25vw, 50vw" widths={[213, 280]} />
			</div>
			<div class="gallery-item">
				<Image src={gallery5} alt="Barista latte art" width={280} height={280} sizes="(min-width: 768px) 25vw, 50vw" widths={[213, 280]} />
			</div>
			<div class="gallery-item wide">
				<Image src={gallery6} alt="Färska smörgåsar och croissanter" width={560} height={280} sizes="(min-width: 768px) 50vw, 100vw" widths={[217, 434, 560]} />
			</div>
		</div>
	</div>
</section>

<style>
	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 0.5rem;
	}
	
	@media (min-width: 768px) {
		.gallery-grid {
			grid-template-columns: repeat(4, 1fr);
			gap: 0.75rem;
		}
	}
	
	@media (min-width: 1024px) {
		.gallery-grid {
			gap: 1rem;
		}
	}
	
	.gallery-item {
		position: relative;
		overflow: hidden;
		border-radius: 0.75rem;
		aspect-ratio: 1;
	}
	
	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.4s ease;
	}
	
	.gallery-item:hover img {
		transform: scale(1.05);
	}
	
	/* Wide item - spans 2 columns */
	.gallery-item.wide {
		grid-column: span 2;
		aspect-ratio: 2/1;
	}
	
	@media (min-width: 640px) {
		.gallery-item {
			border-radius: 1rem;
		}
	}
	
	@media (min-width: 1024px) {
		.gallery-item {
			border-radius: 1.25rem;
		}
	}
</style>
