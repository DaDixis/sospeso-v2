---
// Gallery component - Image collage
// Clean grid layout with section header
import { Image } from 'astro:assets';
import SectionWrapper from '@/components/shared/SectionWrapper.astro';
import SectionHeader from '@/components/shared/SectionHeader.astro';

// Import gallery images
import gallery1 from '@/assets/gallery/A4778BBE-F366-4688-AFCF-75603EDD5209.webp';
import gallery2 from '@/assets/gallery/469277128_18076608766608281_6498017909358642527_n.webp';
import gallery3 from '@/assets/gallery/IMG_0162.webp';
import gallery4 from '@/assets/gallery/469028875_18076608787608281_3997326141294755413_n.webp';
import gallery5 from '@/assets/gallery/IMG_0267.webp';
import gallery6 from '@/assets/gallery/IMG_0313.webp';
---

<SectionWrapper id="galleri">
		<SectionHeader title="Från Vårt Café" centered={true} />
		
		<!-- Gallery Grid - 2 rows, balanced layout -->
		<div class="gallery-grid">
			<!-- Row 1: Wide + Square + Square -->
			<div class="gallery-item">
				<Image src={gallery1} alt="Kaffe och bakverk" width={280} height={350} sizes="(min-width: 768px) 33vw, 50vw" widths={[213, 280, 400, 600, 800]} />
			</div>
			<div class="gallery-item">
				<Image src={gallery2} alt="Färska croissanter" width={280} height={350} sizes="(min-width: 768px) 33vw, 50vw" widths={[213, 280, 400, 600, 800]} />
			</div>
			<div class="gallery-item">
				<Image src={gallery3} alt="Kaffe och croissant" width={280} height={350} sizes="(min-width: 768px) 33vw, 50vw" widths={[213, 280, 400, 600, 800]} />
			</div>
			
			<!-- Row 2: Square + Square + Wide -->
			<div class="gallery-item">
				<Image src={gallery4} alt="Espresso i handen" width={280} height={350} sizes="(min-width: 768px) 33vw, 50vw" widths={[213, 280, 400, 600, 800]} />
			</div>
			<div class="gallery-item">
				<Image src={gallery5} alt="Bakverk" width={280} height={350} sizes="(min-width: 768px) 33vw, 50vw" widths={[213, 280, 400, 600, 800]} />
			</div>
			<div class="gallery-item">
				<Image src={gallery6} alt="Bakelser" width={280} height={350} sizes="(min-width: 768px) 33vw, 50vw" widths={[213, 280, 400, 600, 800]} />
			</div>
		</div>
	</SectionWrapper>

<style>
	.gallery-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 0.5rem;
	}
	
	@media (min-width: 768px) {
		.gallery-grid {
			grid-template-columns: repeat(3, 1fr);
			gap: 0.75rem;
		}
	}
	
	@media (min-width: 1024px) {
		.gallery-grid {
			gap: 1rem;
		}
	}
	
	.gallery-item {
		position: relative;
		overflow: hidden;
		border-radius: 0.75rem;
		aspect-ratio: 4/5;
	}
	
	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.4s ease;
	}
	
	.gallery-item:hover img {
		transform: scale(1.05);
	}
	
	@media (min-width: 640px) {
		.gallery-item {
			border-radius: 1rem;
		}
	}
	
	@media (min-width: 1024px) {
		.gallery-item {
			border-radius: 1.25rem;
		}
	}
</style>
