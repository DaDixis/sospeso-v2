---
// Pre-order component - Breakfast meetings and pre-orders
import { Card, CardContent } from '@/components/starwind/card';
import SectionWrapper from '@/components/shared/SectionWrapper.astro';
import SectionHeader from '@/components/shared/SectionHeader.astro';
import { Button } from '@/components/starwind/button';
---

<SectionWrapper id="catering" maxWidth="max-w-4xl">
		<Card>
			<CardContent class="p-6 sm:p-8 text-center">
				<SectionHeader title="Förbeställning & Frukostmöten" spacing="mb-4" centered={true} />
				
				<p class="text-base text-muted-foreground leading-relaxed max-w-2xl mx-auto mb-6 font-body">
					Ska ni ha frukostmöte på kontoret? Förbeställ färska bakverk, smörgåsar och kaffe. Lägg din beställning ett par dagar i förväg och hämta det innan mötet.
				</p>
				
				<!-- CTA -->
				<Button 
					href="tel:+468291139"
					variant="default"
					size="sm"
				>
					Ring för beställning
				</Button>
			</CardContent>
		</Card>
	</SectionWrapper>
</section>
